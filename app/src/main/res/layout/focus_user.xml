                app:layout_constraintStart_toEndOf="@+id/focus_user2"
                app:layout_constraintTop_toBottomOf="@+id/focus_username2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/focus_user3"
