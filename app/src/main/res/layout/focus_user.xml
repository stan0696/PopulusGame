                android:layout_weight="1"
                android:text="用户1"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/focus_user2"
                app:layout_constraintStart_toEndOf="@+id/focus_user2"
                app:layout_constraintTop_toTopOf="@+id/focus_user2"
                app:layout_constraintVertical_bias="0.0" />

            <Button
