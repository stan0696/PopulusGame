<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/userinfo_back"
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />

    <TextView
        android:id="@+id/pass_questionintro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="请回答密保问题："
        android:textSize="22sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/pass_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="这是密保问题"
        android:textSize="22sp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/useranswer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:hint="输入答案"
        android:textColor="#000000"
        android:theme="@style/MyEditText" />

    <TextView
        android:id="@+id/passwordresettext0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="重置密码："
        android:textSize="22sp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/passwordreset0"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:hint="密码"
        android:inputType="text"
        android:textColor="#000000"
        android:theme="@style/MyEditText" />

    <TextView
        android:id="@+id/passwordresettext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="重新输入："
        android:textSize="22sp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/passwordreset1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:hint="再次输入"
        android:inputType="text"
        android:textColor="#000000"
        android:theme="@style/MyEditText" />

    <Button
        android:id="@+id/password_certify"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="确认"
        style="?android:attr/borderlessButtonStyle"/>


</LinearLayout>