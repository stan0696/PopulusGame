<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <ImageView
                android:id="@+id/star_1"
                app:layout_constraintEnd_toStartOf="@+id/star_2"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_star_black_18dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="28dp" />

            <ImageView
                android:id="@+id/star_15"
                app:layout_constraintEnd_toStartOf="@+id/progressBar5"
                app:layout_constraintTop_toBottomOf="@+id/star_14"
                app:srcCompat="@drawable/ic_star_black_18dp"
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <ImageView
                android:id="@+id/star_13"
                app:layout_constraintEnd_toStartOf="@+id/star_14"
                app:layout_constraintTop_toBottomOf="@+id/star_11"
                app:srcCompat="@drawable/ic_star_black_18dp"
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <ImageView
                android:id="@+id/star_14"
                app:layout_constraintEnd_toStartOf="@+id/progressBar4"
                app:layout_constraintTop_toBottomOf="@+id/star_12"
                app:srcCompat="@drawable/ic_star_black_18dp"
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <ImageView
                android:id="@+id/star_10"
                app:layout_constraintEnd_toStartOf="@+id/star_11"
                app:layout_constraintTop_toBottomOf="@+id/star_7"
                app:srcCompat="@drawable/ic_star_black_18dp"
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <ImageView
                android:id="@+id/star_11"
                app:layout_constraintEnd_toStartOf="@+id/star_12"
                app:layout_constraintTop_toBottomOf="@+id/star_8"
                app:srcCompat="@drawable/ic_star_black_18dp"
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <ImageView
                android:id="@+id/star_12"
                app:layout_constraintEnd_toStartOf="@+id/progressBar3"
                app:layout_constraintTop_toBottomOf="@+id/star_9"
                app:srcCompat="@drawable/ic_star_black_18dp"
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <ImageView
                android:id="@+id/star_6"
                app:layout_constraintEnd_toStartOf="@+id/star_7"
                app:layout_constraintTop_toBottomOf="@+id/star_2"
                app:srcCompat="@drawable/ic_star_black_18dp"
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <ImageView
                android:id="@+id/star_7"
                app:layout_constraintEnd_toStartOf="@+id/star_8"
                app:layout_constraintTop_toBottomOf="@+id/star_3"
                app:srcCompat="@drawable/ic_star_black_18dp"
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <ImageView
                android:id="@+id/star_8"
                app:layout_constraintEnd_toStartOf="@+id/star_9"
                app:layout_constraintTop_toBottomOf="@+id/star_4"
                app:srcCompat="@drawable/ic_star_black_18dp"
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <ImageView
                android:id="@+id/star_9"
                app:layout_constraintEnd_toStartOf="@+id/progressBar2"
                app:layout_constraintTop_toBottomOf="@+id/star_5"
                app:srcCompat="@drawable/ic_star_black_18dp"
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <ImageView
                android:id="@+id/star_2"
                app:layout_constraintEnd_toStartOf="@+id/star_3"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_star_black_18dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="28dp" />

            <ImageView
                android:id="@+id/star_3"
                app:layout_constraintEnd_toStartOf="@+id/star_4"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_star_black_18dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="28dp" />

            <ImageView
                android:id="@+id/star_5"
                app:layout_constraintEnd_toStartOf="@+id/progressBar"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_star_black_18dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="28dp" />

            <ImageView
                android:id="@+id/star_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_stars_teal_800_24dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/game_point"
                app:layout_constraintStart_toEndOf="@+id/star_icon"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="26dp"
                android:text="9.0"
                android:textSize="28sp"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/comment_title"
                android:layout_width="68dp"
                android:layout_height="25dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="4dp"
                android:text="游戏评分"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/star_icon" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/progressbar_shape"
                android:layout_width="120dp"
                android:layout_height="10dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="28dp"
                android:max="100"
                android:progress="100"
                app:layout_constraintStart_toEndOf="@+id/game_point"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="120dp"
                android:layout_height="10dp"
                android:layout_marginStart="60dp"
                android:max="100"
                android:progress="80"
                android:progressDrawable="@drawable/progressbar_shape"
                app:layout_constraintStart_toEndOf="@+id/game_point"
                app:layout_constraintTop_toBottomOf="@+id/progressBar" />

            <ProgressBar
                android:id="@+id/progressBar3"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/progressbar_shape"
                android:layout_width="120dp"
                android:layout_height="10dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="48dp"
                android:max="100"
                android:progress="60"
                app:layout_constraintStart_toEndOf="@+id/game_point"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/progressBar4"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/progressbar_shape"
                android:layout_width="120dp"
                android:layout_height="10dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="58dp"
                android:max="100"
                android:progress="40"
                app:layout_constraintStart_toEndOf="@+id/game_point"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/progressBar5"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/progressbar_shape"
                android:layout_width="120dp"
                android:layout_height="10dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="68dp"
                android:max="100"
                android:progress="20"
                app:layout_constraintStart_toEndOf="@+id/game_point"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/star_4"
                app:layout_constraintEnd_toStartOf="@+id/star_5"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_star_black_18dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="28dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="64dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/zoro" />

            <TextView
                android:id="@+id/mycomment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:text="我的评价"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:progressTint="@color/colorPrimary"
                android:secondaryProgressTint="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="84dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_image" />

            <TextView
                android:id="@+id/textView_star"
                android:layout_width="119dp"
                android:layout_height="24dp"
                android:layout_marginStart="144dp"
                android:layout_marginTop="4dp"
                android:text="点击发布我的评价"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ratingBar" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/playercomment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玩家评价"
            android:textColor="#000000"
            android:textSize="20sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/player_comment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:text="这是玩家的评论"
                android:textColor="#000000"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/player_image1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/zoro" />

            <TextView
                android:id="@+id/player_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="玩家1"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/player_image1"
                app:layout_constraintTop_toTopOf="parent" />

            <RatingBar
                android:id="@+id/ratingBar2"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/player_image1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/player_comment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:text="这是玩家的评论"
                android:textColor="#000000"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/player_image2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/zoro" />

            <TextView
                android:id="@+id/player_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="玩家1"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/player_image2"
                app:layout_constraintTop_toTopOf="parent" />

            <RatingBar
                android:id="@+id/ratingBar3"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/player_image2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/player_comment3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:text="这是玩家的评论"
                android:textColor="#000000"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/player_image3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/zoro" />

            <TextView
                android:id="@+id/player_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="玩家1"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/player_image3"
                app:layout_constraintTop_toTopOf="parent" />

            <RatingBar
                android:id="@+id/ratingBar4"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/player_image3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>